<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/content_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.ztiany.MainActivity"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="wrapContent"
            android:text="Wrap Content"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="snapHelper"
            android:text="Snap Helper"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="itemTouch"
            android:text="Item Touch"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="itemTouchExtension"
            android:text="Item TouchHelper Extension"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="diffUtils"
            android:text="DiffUtils"/>

    </LinearLayout>

</ScrollView>
