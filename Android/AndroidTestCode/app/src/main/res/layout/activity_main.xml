<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ztiany.test.MainActivity">


    <Button
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="recreate"
        android:text="recreate"
        tools:ignore="HardcodedText"/>


    <Button
        android:id="@+id/act_btn_system_ui"
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openSystemUI"
        android:text="SystemUI"
        tools:ignore="HardcodedText"/>

    <Button
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="opActivityAnim"
        android:text="Activity Animation"
        tools:ignore="HardcodedText"/>

    <Button
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openTint"
        android:text="Activity Tint"
        tools:ignore="HardcodedText"/>

    <Button
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openTime"
        android:text="openTime  "
        tools:ignore="HardcodedText"/>

    <Button
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openStatus"
        android:text="openStatus  "
        tools:ignore="HardcodedText"/>

    <Button
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="fragments"
        android:text="fragments"
        tools:ignore="HardcodedText"/>

    <Button
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="fragmentsViewPager"
        android:text="fragmentsViewPager"
        tools:ignore="HardcodedText"/>
</LinearLayout>
