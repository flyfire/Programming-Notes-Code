<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TabTextAppearance">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Style_View_Drawable">
        <item name="android:layout_width">@dimen/view_drawable_size</item>
        <item name="android:layout_height">@dimen/view_drawable_size</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="AppTheme.Dialog" parent="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item><!--开启窗口模式-->
        <item name="windowActionBar">false</item>
        <item name="android:windowIsTranslucent">true</item><!--透明的窗口颜色-->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorAccent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

</resources>
