<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.ztiany.kotlin"
          xmlns:android="http://schemas.android.com/apk/res/android">


    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!--Anko Common Intents-->
        <activity
            android:name=".anko.common.intents.TargetActivity"
            android:label="Target"/>

        <activity
            android:name=".anko.common.intents.RawActivity"
            android:label="Raw"/>

        <activity
            android:name=".anko.common.DialogsActivity"
            android:label="Dialogs"/>

        <activity
            android:name=".anko.common.LoggerActivity"
            android:label="Logger"/>
        <activity
            android:name=".anko.common.AnkoCommonActivity"
            android:label="AnkoCommon"/>

    </application>

</manifest>